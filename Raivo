#include<conio.h>
#include<iostream>
#include<stdlib.h>

using namespace std;

struct data
{
    char nama[20],nim[20],ipk[20];
};
data batas[100];
int a,b,c,d;

void inputdata ()
{
    cout<<"Jumlah Data Yang Akan diinput : "; cin>>b;
    d=0;
    for(c=0;c<b;c++)
    {
        d=d+1;
        cout<<"\nData ke-"<<d<<endl;
        cout<<"NAMA\t: ";cin>>batas[a].nama;
        cout<<"NIM\t: ";cin>>batas[a].nim;
        cout<<"IPK\t: ";cin>>batas[a].ipk;
        a++;
    }
}

void lihatdata()
{
    int i, j;
    cout<<"\nMenampilkan Data\n";
    cout<<endl;
    j=0;
    for(i=0;i<a;i++)
    {
        j=j+1;
        cout<<j<<" ";
        cout<<batas[i].nama<<"\t\t";
        cout<<batas[i].nim<<"\t";
        cout<<batas[i].ipk;
        cout<<endl;
    }
    getch();
}

void caridata()
{
    int i, k;
    string j;
    cout<<"\nMenampilkan Data\n";
    cout<<endl;
    cout<<"cari(nama) : "; cin>>j;
    cout<<endl;
    k=0;
    for(i=0;i<a;i++)
    {
        k=k+1;
        if (batas[i].nama==j)
        {
            cout<<k<<" ";
            cout<<batas[i].nama<<"\t\t";
            cout<<batas[i].nim<<"\t";
            cout<<batas[i].ipk;
            cout<<endl;
        }
    }
    getch();
}

void hapusdata()
{
    int x,y;
    cout<<"Hapus data ke-";cin>>x;
    y=x-1;
    a--;
    for(int i=y;i<a;i++)
    {
        batas[i]=batas[i+1];
    }
    cout<<"\n\nData ke-"<<x<<" Terhapus";
    getch();
}

void editdata()
{
    int k,l;
    cout<<"Masukan Data yang akan diedit : ";cin>>k;
    l=k-1;
    cout<<"NAMA\t: ";cin>>batas[l].nama;
    cout<<"NIM\t: ";cin>>batas[l].nim;
    cout<<"IPK\t: ";cin>>batas[l].ipk;
    lihatdata();
}

int main()
{
    int pilih;
    char w;
    cout<<"=============================PROGRAM STRUKTUR DATA=============================";
    cout<<"\n\n\t\t\t     PROGRAM BY KELOMPOK 1\n\n";
    cout<<"\t\t\t       ASSALAMU'ALAIKUM\n";
    awal:
    cout<<"\n================================ PILIHAN MENU =================================";
    cout<<"\n1. Masukkan data";
    cout<<"\n2. Tambah Data";
    cout<<"\n3. Cari Data";
    cout<<"\n4. Hapus Data";
    cout<<"\n5. Lihat Data";
    cout<<"\n6. Keluar";
    cout<<"\n\nMasukkan Pilihan : ";
    cin>>pilih;
    if(pilih==1)
    {
        inputdata();
        goto awal;
    }
    if (pilih==2)
    {
        inputdata();
        goto awal;

    }
    if(pilih==3)
    {
        caridata();
        goto awal;
    }
    if(pilih==4)
    {
        hapusdata();
        goto awal;
    }
    if(pilih==5)
    {
        lihatdata();
        goto awal;
    }
    if(pilih==6)
    {
        cout<<"\nAPAKAH ANDA YAKIN KELUAR DARI PROGRAM??\n\n";
        cout<<"[Y] [N]\n"<<endl;
        cin>>w;
        if(w=='y'||w=='Y')
        {
            cout<<"\t********** PROGRAM SELESAI ********* ";}
            if(w=='n'||w=='N')
            {
                goto awal;
            }
    }
    else
    {
        cout<<"Pilihan 1-5";
        getch();
        goto awal;
    }
cout<<"\n\n\t\t\t\tPROGRAM BY KELOMPOK 1\n\n";
cout<<"\t\t\t\t  WASSALAMU'ALAIKUM\n";
}
